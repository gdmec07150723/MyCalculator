<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.gdmec.s07150723.mycalculator.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人标准计算器"
            android:textSize="20.0dip"
            android:textStyle="bold"
            android:layout_marginTop="20.0dip"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60.dip"
        android:orientation="horizontal"
        android:layout_marginTop="10.0dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="请输入你的体重"
            android:textSize="20.0dip"
            android:layout_marginLeft="5.0dp" />
        <EditText
            android:layout_width="150.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/weight"
            android:textSize="20.0dip"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20.0dip"
            android:text="kg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择你的性别:"
            android:textSize="20.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="20.0dip"/>
        <RadioGroup
            android:layout_width="120.0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/man"
            android:checked="true"
            android:text="男"
            android:textSize="20.0dip"
            android:layout_weight="15"/>
        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/woman"
        android:checked="true"
        android:text="女"
        android:textSize="20.0dip"
            android:layout_weight="10.20"/>
    </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:id="@+id/calculator"
            android:text="运                        算"
            android:textSize="20.0dip"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:layout_marginTop="10.0dip"
            android:textSize="10.0dip"/>
    </LinearLayout>
</LinearLayout>
